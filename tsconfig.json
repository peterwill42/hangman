{
    "compilerOptions": {
        "module": "system",
		  "strict": true,
		  "noFallthroughCasesInSwitch": true,
		  "noImplicitReturns": true,
		  "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build/**/*",
        "**/*.spec.ts"
    ]
}
